{
  "name": "mediact/testing-suite",
  "description": "Contains MediaCT's default testing packages.",
  "type": "composer-plugin",
  "license": "proprietary",
  "prefer-stable": true,
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "MediaCT B.V.",
      "email": "contact@mediact.nl"
    },
    {
      "name": "Len Lorijn",
      "role": "developer"
    },
    {
      "name": "Jan-Marten de Boer",
      "role": "developer"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://composer.mediact.nl"
    }
  ],
  "require": {
    "php": "^7.0",
    "mediact/coding-standard": "^1.6",
    "mediact/coding-standard-phpstorm": "^1.0",
    "phpstan/phpstan": "^0.6.4",
    "composer-plugin-api": "^1.1",
    "mediact/composer-file-installer": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "@stable",
    "composer/composer": "@stable"
  },
  "bin": ["bin/mediact-testing-suite"],
  "extra": {
    "class": "Mediact\\TestingSuite\\Composer\\Plugin"
  },
  "autoload": {
    "psr-4": {
      "Mediact\\TestingSuite\\Composer\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mediact\\TestingSuite\\Composer\\Tests\\": "tests"
    }
  },
  "archive": {
    "exclude": [
      "tests",
      ".gitignore",
      "bitbucket-pipelines.yml",
      "phpcs.xml",
      "phpmd.xml",
      "phpunit.xml"
    ]
  }
}
